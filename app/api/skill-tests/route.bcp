import { NextResponse } from "next/server"
import { getServerSession } from "next-auth"
import { authOptions } from "@/lib/auth"
import clientPromise from "@/lib/mongodb"
import type { SkillTest } from "@/lib/models/skill-test"

export async function GET() {
  try {
    const client = await clientPromise
    const db = client.db("nrbtalents")

    const tests = await db.collection<SkillTest>("skill_tests").find({}).toArray()

    return NextResponse.json(tests)
  } catch (error) {
    console.error("Error fetching skill tests:", error)
    return NextResponse.json({ error: "Failed to fetch skill tests" }, { status: 500 })
  }
}

export async function POST(request: Request) {
  try {
    const session = await getServerSession(authOptions)
    if (!session?.user) {
      return NextResponse.json({ error: "Unauthorized" }, { status: 401 })
    }

    const body = await request.json()
    const client = await clientPromise
    const db = client.db("nrbtalents")

    const test: SkillTest = {
      ...body,
      createdAt: new Date(),
      updatedAt: new Date(),
    }

    const result = await db.collection("skill_tests").insertOne(test)

    return NextResponse.json({ id: result.insertedId })
  } catch (error) {
    console.error("Error creating skill test:", error)
    return NextResponse.json({ error: "Failed to create skill test" }, { status: 500 })
  }
}
